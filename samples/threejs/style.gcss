$font: 'Indie Flower'

body
  color: #111
  background-color: #eee
  font-family: $font, serif
  font-size: 1.8em
  margin: 0

p
  margin-left: 0.7em

#fg
  margin: 6em 0 0 6em

#bg
  position: fixed
  right: 0
  bottom: 0
  min-width: 100%
  min-height: 100%
  width: auto
  height: auto
  z-index: -100
  background-size: cover
  filter: blur(5px)
  -webkit-filter: blur(5px)
  -o-filter: blur(5px)
